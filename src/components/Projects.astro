---
import JavaIcon from "./Icons/Java.astro";
import HtmlIcon from "./Icons/HTML.astro";
import JsIcon from "./Icons/JS.astro";
import SpringIcon from "./Icons/SpringBoot.astro";
import MySqlIcon from "./Icons/MySQL.astro";

const TAGS = {
  Java: {
    name: "Java",
    class: "bg-red-600/20 text-red-400/100",
    icon: JavaIcon,
  },

  HTML: {
    name: "HTML",
    class: "bg-orange-600/20 text-orange-400/100",
    icon: HtmlIcon,
  },

  JavaScript: {
    name: "JavaScript",
    class: "bg-yellow-600/20 text-yellow-400/100",
    icon: JsIcon,
  },
  SpringBoot: {
    name: "SpringBoot",
    class: "bg-green-600/20 text-green-400/100",
    icon: SpringIcon,
  },

  MySQL: {
    name: "MySQL",
    class: "bg-blue-600/20 text-blue-400/100",
    icon: MySqlIcon,
  },
};

const PROJECTS = [
  {
    title: "TechShop E-commerce",
    description:
      "Created from scratch, Techshop its a fictional web store that sells different kinds of hardware and software. It has a cart fuctionality and security roles for different views depending on the priviliges that the user loged in has, queries, verification of created user via email, cloud data base, different language options, among others features.",
    link: "https://tienda-vm-zv8c.onrender.com/",
    github: "https://github.com/AnndyMadrigal/Techshop",
    image: "/projects/TechShop.webp",
    tags: [TAGS.Java, TAGS.HTML, TAGS.JavaScript, TAGS.SpringBoot, TAGS.MySQL],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200/100 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
          {tags.map((tag) => (
            <li class="flex-none">
              <span
                class={`inline-flex gap-x-2 items-center rounded-full text-xs ${tag.class} py-1 px-3`}
              >
                <tag.icon class="size-5" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          class="w-full h-auto rounded-lg mt-4"
          src={image}
          alt={`Screenshot of the project ${image}`}
        />
    </article>
  ))
}
